            <a href="/"><h1 class="mb-5 text-center">Modification de la photo {{photo.ID}}</h1></a>

            <form action="" method="POST">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            {% for index, value in photo %}
                                <th scope="col">{{index}}</th>
                            {% endfor %}
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            {% for index, value in photo %}
                            <th>
                                <input type="text" class="form-control" id="{{index}}" name="{{index}}" value="{{value}}" {% if(index != "ordre")%} readonly {% endif %}>
                            </th>
                            {% endfor %}
                        </tr>
                    </tbody>
                </table>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </form>

            <form action="/panel admin/photos/delete" method="POST" class="mt-5">
                <input type="hidden" name="id" value="{{photo.ID}}">
                <button type="submit" class="btn btn-primary">Supprimer</button>
            </form>
            
