<!doctype html>
<html lang="fr">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <title>Photo</title>
  </head>
  <body class="bg-dark" style="height: 100vh;">
    <div class="d-flex bg-dark" style="height: 100%;">
      <div class="btn-group-vertical bg-dark" role="group" aria-label="Vecrtical group with buttons" style="border-right: 3px solid black; height: 100%;">
        <span class="mt-5"></span>
        <div class="btn-group mr-2" role="group" aria-label="Utilisateur group">
          <button type="button" class="btn btn-secondary btn-lg col-8">Utilisateur</button>
          <button type="button" class="btn btn-secondary btn-lg col-4">+</button>
        </div>
        <div class="btn-group mr-2" role="group" aria-label="Artiste group">
          <button type="button" class="btn btn-secondary btn-lg col-8">Artiste</button>
          <button type="button" class="btn btn-secondary btn-lg col-4">+</button>
        </div>
        <div class="btn-group mr-2" role="group" aria-label="Oeuvre group">
          <button type="button" class="btn btn-secondary btn-lg col-8">Oeuvre</button>
          <button type="button" class="btn btn-secondary btn-lg col-4">+</button>
        </div>
        <span class="mt-5"></span>
        <div class="btn-group" role="group" aria-label="Commande group">
          <button type="button" class="btn btn-secondary btn-lg">Commande</button>
        </div>
        <div class="btn-group" role="group" aria-label="Message group">
          <button type="button" class="btn btn-secondary btn-lg">Message <span class="badge badge-light">4</span> </button>
        </div>
        <span class="mt-5"></span>
      </div>
      <div class="pt-2" style="height: 100%; width: 100%;">
        <div class="container-fluid bg-light pt-5" style="height: 100%; overflow: auto;">
          <div class="container-fluid d-flex justify-content-between">
            <h1>Photos</h1>
            <div><a href="" class="btn btn-primary btn-sm align-bottom mt-4">+</a></div>
          </div>
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                {% for index, value in photo %}
                  <th scope="col">{{index}}</th>
                {% endfor %}
              </tr>
            </thead>
            <tbody>
              <tr>
                {% for index, value in photo %}
                  <th scope="col">{{value}}</th>
                {% endfor %}
              </tr>
            </tbody>
          </table>

          <div class="form-inline">
            <a href="photos/edit/{{photo.id}}" class="btn btn-primary mr-5">Modifier</a>

            <form class="mr-5" action="photos/delete" method="POST">
              <input type="hidden" name="id" value="{{photo.id}}">
              <button type="submit" class="btn btn-primary">Supprimer</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>